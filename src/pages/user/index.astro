---
import { getUser, redirectUser } from "@astro-auth/core";

const user = getUser({client: Astro})
if (!user) {
  return redirectUser("/");
}

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>User</title>
	</head>
	<body>
		{user}
	</body>
</html>